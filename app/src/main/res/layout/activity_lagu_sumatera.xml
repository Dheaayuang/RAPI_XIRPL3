<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lagu_sumatera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/lagusumatera"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.project.xirpl307162534.rapi.lagu_sumatera">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="15dp"
        android:background="#00000000"
        app:srcCompat="@mipmap/back" />


    <ImageButton
        android:id="@+id/btnPLAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/btnPAUSE"
        android:layout_toStartOf="@+id/btnPAUSE"
        android:background="#00000000"
        android:text="PLAY"
        app:srcCompat="@mipmap/play" />

    <ImageButton
        android:id="@+id/btnSTOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPAUSE"
        android:layout_below="@+id/btnPLAY"
        android:layout_marginLeft="120dp"
        android:layout_toEndOf="@+id/btnPAUSE"
        android:layout_toRightOf="@+id/btnPAUSE"
        android:background="#00000000"
        android:text="STOP"
        app:srcCompat="@mipmap/stop" />

    <ImageButton
        android:id="@+id/btnPAUSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPLAY"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:background="#00000000"
        android:text="PAUSE"
        app:srcCompat="@mipmap/pause" />

</LinearLayout>
